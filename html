                </section>
            `
        };

        // ====================================
        // JAVASCRIPT LOGIC
        // ====================================
        document.addEventListener('DOMContentLoaded', () => {
            const mobileMenu = document.getElementById('mobile-menu');
            const navMenu = document.querySelector('.nav-menu');
            const mainContent = document.getElementById('main-content');
            const navLinks = document.querySelectorAll('[data-content]');
            
            // Fungsi untuk memuat konten
            const loadContent = (contentKey) => {
                const content = contentPages[contentKey];
                if (content) {
                    // Masukkan konten HTML ke dalam elemen main
                    mainContent.innerHTML = content;
                    
                    // Kelola kelas aktif pada menu
                    navLinks.forEach(link => link.classList.remove('active-link'));
                    document.querySelector(`[data-content="${contentKey}"]`).classList.add('active-link');

                    // Scroll ke atas halaman setelah memuat konten baru
                    window.scrollTo(0, 0);

                    // Re-attach listeners for internal links in the new content
                    attachInternalListeners();
                }
            };
            
            // Fungsi untuk melampirkan listener ke tautan internal
            const attachInternalListeners = () => {
                // Cari semua tautan baru di konten yang baru dimuat
                const internalLinks = mainContent.querySelectorAll('[data-content]');
                internalLinks.forEach(link => {
                    link.addEventListener('click', (e) => {
                        e.preventDefault();
                        const key = e.currentTarget.getAttribute('data-content');
                        loadContent(key);
                        // Tutup menu mobile setelah klik (jika terbuka)
                        if (navMenu.classList.contains('active')) {
                            navMenu.classList.remove('active');
                        }
                    });
                });
            };

            // Listener untuk menu utama (termasuk footer)
            navLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const key = e.currentTarget.getAttribute('data-content');
                    loadContent(key);
                    // Tutup menu mobile setelah klik (jika terbuka)
                    if (navMenu.classList.contains('active')) {
                        navMenu.classList.remove('active');
                    }
                });
            });

            // Listener untuk Toggle menu mobile
            mobileMenu.addEventListener('click', () => {
                navMenu.classList.toggle('active');
            });

            // Muat halaman beranda saat pertama kali dimuat
            loadContent('home'); 
        });
    </script>
</body>
</html>
